@{
    ViewData["Title"] = "Contact";
}

@if (TempData["InfoMessage"] != null)
{
    <div class="alert alert-info alert-dismissible fade show mx-3 mt-3" role="alert">
        <i class="fas fa-info-circle me-2"></i>
        @TempData["InfoMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<section class="contact-hero py-5">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <h1>Get Started Today</h1>
                <p class="lead">Ready to turn your idea into a thriving business? Let's talk.</p>
            </div>
        </div>
    </div>
</section>

<section class="contact-options py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="row">
                    <div class="col-md-6 mb-4">
                        <div class="contact-card text-center">
                            <i class="fas fa-lightbulb fa-3x text-primary mb-3"></i>
                            <h4>Submit Your Idea</h4>
                            <p>Ready to get professional evaluation of your business idea? Start with our comprehensive submission form.</p>
                            <a asp-action="SubmitIdea" class="btn btn-primary">Submit Idea</a>
                        </div>
                    </div>
                    <div class="col-md-6 mb-4">
                        <div class="contact-card text-center">
                            <i class="fas fa-envelope fa-3x text-primary mb-3"></i>
                            <h4>General Contact</h4>
                            <p>Have questions about our process or want to discuss your project? Send us a message.</p>
                            <a href="mailto:contact@jaxsun.us" class="btn btn-outline-primary">Email Us</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="contact-info py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center mb-5">
                <h2>Contact Information</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 text-center mb-4">
                <div class="info-item">
                    <i class="fas fa-envelope fa-2x text-primary mb-3"></i>
                    <h5>Email</h5>
                    <p>contact@jaxsun.us</p>
                </div>
            </div>
            <div class="col-md-4 text-center mb-4">
                <div class="info-item">
                    <i class="fas fa-map-marker-alt fa-2x text-primary mb-3"></i>
                    <h5>Location</h5>
                    <p>Based in the Midwest USA</p>
                </div>
            </div>
            <div class="col-md-4 text-center mb-4">
                <div class="info-item">
                    <i class="fas fa-clock fa-2x text-primary mb-3"></i>
                    <h5>Response Time</h5>
                    <p>1-3 business days</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="next-steps py-5">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center mb-5">
                <h2>What Happens Next?</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 text-center mb-4">
                <div class="step-item">
                    <div class="step-number">1</div>
                    <h5>You Submit</h5>
                    <p>Complete our idea submission form with details about your business concept and goals.</p>
                </div>
            </div>
            <div class="col-md-4 text-center mb-4">
                <div class="step-item">
                    <div class="step-number">2</div>
                    <h5>We Analyze</h5>
                    <p>Our team conducts comprehensive market research and feasibility analysis of your idea.</p>
                </div>
            </div>
            <div class="col-md-4 text-center mb-4">
                <div class="step-item">
                    <div class="step-number">3</div>
                    <h5>We Connect</h5>
                    <p>We'll reach out within 1-3 business days to discuss our findings and next steps.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="faq py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center mb-5">
                <h2>Frequently Asked Questions</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="accordion" id="faqAccordion">
                    <div class="accordion-item">
                        <h3 class="accordion-header">
                            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#faq1">
                                How much does it cost to submit an idea?
                            </button>
                        </h3>
                        <div id="faq1" class="accordion-collapse collapse show" data-bs-parent="#faqAccordion">
                            <div class="accordion-body">
                                Submitting your idea is completely free. Our initial evaluation and market research are part of our partnership exploration process at no cost to you.
                            </div>
                        </div>
                    </div>
                    
                    <div class="accordion-item">
                        <h3 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq2">
                                What information do you need about my idea?
                            </button>
                        </h3>
                        <div id="faq2" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                            <div class="accordion-body">
                                We need a clear description of your business idea, the problem it solves, your target market, and your vision for the business. The more detail you provide, the better we can evaluate the opportunity.
                            </div>
                        </div>
                    </div>
                    
                    <div class="accordion-item">
                        <h3 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq3">
                                How do you protect my intellectual property?
                            </button>
                        </h3>
                        <div id="faq3" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                            <div class="accordion-body">
                                We treat all submissions with strict confidentiality. We can sign NDAs if required, and we respect intellectual property rights throughout our evaluation and partnership process.
                            </div>
                        </div>
                    </div>
                    
                    <div class="accordion-item">
                        <h3 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq4">
                                What if you decide not to partner with me?
                            </button>
                        </h3>
                        <div id="faq4" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                            <div class="accordion-body">
                                If we determine that a partnership isn't the right fit, we'll provide you with our research findings and recommendations. You'll have valuable market insights to help guide your next steps.
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="cta-section py-5 bg-primary text-white">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <h2>Ready to Get Started?</h2>
                <p class="lead">Take the first step toward turning your idea into a successful business</p>
                <a asp-action="SubmitIdea" class="btn btn-light btn-lg">Submit Your Idea Now</a>
            </div>
        </div>
    </div>
</section>