@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<section class="error-page py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 text-center">
                <div class="error-icon mb-4">
                    <i class="fas fa-exclamation-triangle fa-5x text-warning"></i>
                </div>
                <h1 class="display-4">Oops! Something went wrong</h1>
                <p class="lead">We're sorry, but there was an error processing your request.</p>
                
                @if (Model.ShowRequestId)
                {
                    <p class="text-muted">
                        <strong>Request ID:</strong> <code>@Model.RequestId</code>
                    </p>
                }
                
                <div class="error-actions mt-4">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg me-3">
                        <i class="fas fa-home me-2"></i>Go Home
                    </a>
                    <a href="javascript:history.back()" class="btn btn-outline-secondary btn-lg">
                        <i class="fas fa-arrow-left me-2"></i>Go Back
                    </a>
                </div>
                
                <div class="contact-support mt-5">
                    <h5>Need Help?</h5>
                    <p>If this problem persists, please contact us:</p>
                    <a href="mailto:contact@jaxsun.us" class="btn btn-outline-primary">
                        <i class="fas fa-envelope me-2"></i>Contact Support
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
.error-page {
    min-height: 60vh;
    display: flex;
    align-items: center;
}

.error-icon {
    animation: pulse 2s infinite;
}

@@keyframes pulse {
    0% {
        transform: scale(1);
    }
    50% {
        transform: scale(1.05);
    }
    100% {
        transform: scale(1);
    }
}

.contact-support {
    padding: 2rem;
    background-color: #f8f9fa;
    border-radius: 0.5rem;
    border: 1px solid #dee2e6;
}
</style>