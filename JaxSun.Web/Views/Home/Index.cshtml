@model HomeViewModel
@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center min-vh-75">
            <div class="col-lg-6">
                <h1 class="hero-title">Turn Your Great Ideas Into Thriving Software Businesses</h1>
                <p class="hero-subtitle">Partner with experienced Midwest developers who share the risk and reward</p>
                <div class="hero-actions">
                    <a asp-controller="Contact" asp-action="SubmitIdea" class="btn btn-primary btn-lg me-3">Submit Your Idea for Evaluation</a>
                    <a asp-controller="Process" asp-action="Index" class="btn btn-outline-secondary btn-lg">Learn Our Process</a>
                </div>
            </div>
            <div class="col-lg-6">
                @if (Model.HeroImages.Any())
                {
                    <div id="heroCarousel" class="carousel slide carousel-fade hero-carousel" data-bs-ride="carousel" data-bs-interval="4000">
                        <div class="carousel-inner">
                            @for (int i = 0; i < Model.HeroImages.Count; i++)
                            {
                                <div class="carousel-item @(i == 0 ? "active" : "")">
                                    <img src="@Model.HeroImages[i]" class="d-block w-100 hero-image" alt="Midwest Partnership @(i + 1)" />
                                    <div class="carousel-overlay">
                                        <div class="overlay-content">
                                            <i class="fas fa-handshake overlay-icon"></i>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        
                        <!-- Carousel Controls -->
                        @if (Model.HeroImages.Count > 1)
                        {
                            <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        }
                        
                        <!-- Carousel Indicators -->
                        @if (Model.HeroImages.Count > 1)
                        {
                            <div class="carousel-indicators">
                                @for (int i = 0; i < Model.HeroImages.Count; i++)
                                {
                                    <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="@i" 
                                            class="@(i == 0 ? "active" : "")" aria-current="@(i == 0 ? "true" : "false")" 
                                            aria-label="Slide @(i + 1)"></button>
                                }
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="hero-image-placeholder bg-light d-flex align-items-center justify-content-center rounded shadow" style="height: 400px;">
                        <div class="text-center text-muted">
                            <i class="fas fa-image fa-3x mb-2"></i>
                            <p>No images found<br><small>Add images to /Images/MainPage/ folder</small></p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

<!-- Value Proposition Section -->
<section class="value-proposition py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center mb-5">
                <h2>Why Partner with JaxSun.us?</h2>
                <p class="lead">We remove the biggest risk for entrepreneurs: not knowing how to launch and validate your product</p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="value-card text-center">
                    <div class="value-icon">
                        <i class="fas fa-search fa-3x text-primary mb-3"></i>
                    </div>
                    <h4>Professional Product Research</h4>
                    <p>Market validation and strategic guidance to ensure your idea has real potential before investing time and money.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="value-card text-center">
                    <div class="value-icon">
                        <i class="fas fa-handshake fa-3x text-primary mb-3"></i>
                    </div>
                    <h4>Full Development Partnership</h4>
                    <p>From concept to launch with shared investment. We're not just contractors - we're your business partners.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="value-card text-center">
                    <div class="value-icon">
                        <i class="fas fa-chart-line fa-3x text-primary mb-3"></i>
                    </div>
                    <h4>Ongoing Support & Revenue Sharing</h4>
                    <p>Hosting, technical support, and shared success. When you succeed, we succeed together.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Trust Indicators Section -->
<section class="trust-indicators py-5">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center mb-5">
                <h2>Experience You Can Trust</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3 col-sm-6 mb-4 text-center">
                <div class="trust-item">
                    <h3 class="text-primary">47+</h3>
                    <p>Years Combined Experience</p>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 mb-4 text-center">
                <div class="trust-item">
                    <h3 class="text-primary">Enterprise</h3>
                    <p>Grade Solutions Worldwide</p>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 mb-4 text-center">
                <div class="trust-item">
                    <h3 class="text-primary">Microsoft</h3>
                    <p>Partnership History</p>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 mb-4 text-center">
                <div class="trust-item">
                    <h3 class="text-primary">Military</h3>
                    <p>Trained Leadership</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action Section -->
<section class="cta-section py-5 bg-primary text-white">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <h2>Ready to Turn Your Idea Into Reality?</h2>
                <p class="lead">Get professional market research and evaluation for your business idea</p>
                <a asp-controller="Contact" asp-action="SubmitIdea" class="btn btn-light btn-lg">Submit Your Idea Today</a>
            </div>
        </div>
    </div>
</section>